        <activity android:name="com.example.quickrepair.view.Customer.ShowUnconfirmedRepairRequest.CustomerUnconfirmedRepairRequestActivity"/>
        <activity android:name=".view.Customer.RegisterCustomer.CustomerRegisterActivity" />

        <activity android:name="com.example.quickrepair.view.HomePage.HomePageActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>