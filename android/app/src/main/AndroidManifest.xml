        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.Technician.AddEditJob.AddEditJobActivity" />
        <activity android:name=".view.Technician.AddEditArea.AddEditAreaActivity" />
        <activity
